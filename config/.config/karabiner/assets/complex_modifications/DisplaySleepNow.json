{
	"title": "Sleep screen",
	"rules": [
		{
			"description": "Command + L to sleep the screen.",
			"manipulators": [
				{
					"from": {
						"key_code": "l",
						"modifiers": {
							"mandatory": [
								"left_command"
							],
							"optional": [
								"any"
							]
						}
					},
					"to": [
						{
							"shell_command": "pmset displaysleepnow"
						}
					],
					"type": "basic"
				}
			]
		}
	]
}

